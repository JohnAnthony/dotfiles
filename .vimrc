set number
colorscheme kilcros
syntax on
set guioptions=
set tabstop=4
set shiftwidth=4
set backspace=2
set backspace=indent,eol,start
set guifont=Terminus:h9:cANSI
set hlsearch

set backupdir=~/.vim/backup//
set directory=~/.vim/swap//
set undodir=~/.vim/undo//

set colorcolumn=80

execute pathogen#infect()
filetype plugin indent on
