-- Config { font = "-*-terminus  ttf -*-*-*-*-*-120-*-*-*-*-*-*"
Config { font = "xft:Terminus:size=8:antialias=false"
       , bgColor = "#101010"
       , fgColor = "#ffffff"
       , position = Top
       , commands = [ Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 30
                    , Run Memory ["-t","Mem: <usedratio>%"] 30
                    , Run DynNetwork ["-L","0","-H","1000","--normal","green","--high","red"] 30
                    , Run Date "%a %b %_d %H:%M" "date" 600
                    , Run StdinReader
--                    , Run Battery [] 30
                    ]
       , sepChar = "%"
       , alignSep = "}{"
--       , template = "%StdinReader% }{ %battery% | %cpu% | %memory% | %eth0%%wlan0% | <fc=#ff0000>%date%</fc>"
       , template = "%StdinReader% }{ %cpu% | %memory% | %dynnetwork% | <fc=#ff0000>%date%</fc>"
	   , hideOnStart = False
	   , lowerOnStart = True
	   , persistent = True
       }
